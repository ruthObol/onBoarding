generator client {
  provider = "prisma-client-js"
}

generator json {
  provider = "prisma-json-types-generator"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum BuildDifficulty {
  EASY
  MEDIUM
  HARD
  EXPERT
}

model Category { 
  id             Int             @id @default(autoincrement())
  name           String
  postCategories PostCategory[]  @relation("CategoryToPostCategories")
}

model Post {
  id              Int             @id @default(autoincrement())
  title           String
  content         String
  legoModelNumber String
  pieces          Int?
  imageUrl        String
  contactPhone    String
  buildDifficulty BuildDifficulty
  publisher       String

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt
  deletedAt DateTime?

  postCategories PostCategory[]  @relation("PostToPostCategories")
}

model PostCategory {
  id         Int      @id @default(autoincrement())

  postId     Int
  categoryId Int

  post     Post     @relation("PostToPostCategories", fields: [postId], references: [id], onDelete: Cascade)
  category Category @relation("CategoryToPostCategories", fields: [categoryId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())

  @@unique([postId, categoryId])
  @@index([postId])
  @@index([categoryId])
}
